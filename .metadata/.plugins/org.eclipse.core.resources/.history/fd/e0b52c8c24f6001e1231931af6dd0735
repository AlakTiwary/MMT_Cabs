package StepDefinition;

import java.awt.AWTException;
import java.awt.Robot;
import java.awt.event.KeyEvent;

import org.openqa.selenium.WebDriver;
import DriverSetup.SetupDriver;
import PageFactory.CabPF;
import io.cucumber.java.en.And;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;

public class CabStepDef {
     WebDriver driver;
	 CabPF cpf;
	
	
	@Given("User is on Homepage")
	public void user_is_on_homepage() throws InterruptedException {
	  driver=SetupDriver.chromeDriver();
	 
	 
	}

	@When("User selects Cab option")
	public void user_selects_cab_option() throws InterruptedException {
     cpf=new CabPF(driver);
     cpf.clickCab();
    //driver.findElement(By.xpath("//a[@href=\"https://www.makemytrip.com/cabs/\"]")).click();
	}

	@And("User selects Outstaion One-Way option")
	public void user_selects_outstaion_one_way_option() {
		cpf.clickOneWay();
	}

	@And("User enters the details Source,Destination,Departure_Date and Pickup_Time")
	public void user_enters_the_details_source_destination_departure_date_and_pickup_time() throws AWTException, InterruptedException {
        cpf.enterSource("Mumbai");
        Thread.sleep(2000);
        Robot r=new Robot();
        r.keyPress(KeyEvent.VK_DOWN);
        r.keyRelease(KeyEvent.VK_DOWN);
        r.keyPress(KeyEvent.VK_ENTER);
        r.keyRelease(KeyEvent.VK_ENTER);
        cpf.enterDest("Kolkata");
        Robot ri=new Robot();
        ri.keyPress(KeyEvent.VK_DOWN);
        ri.keyRelease(KeyEvent.VK_DOWN);
        ri.keyPress(KeyEvent.VK_ENTER);
        ri.keyRelease(KeyEvent.VK_ENTER);
	}

	@And("Click on Search button")
	public void click_on_search_button() {
     cpf.Search();
	}

	@Then("Landing page of Outstaion One-Way is opened")
	public void landing_page_of_outstaion_one_way_is_opened() {
	    System.out.println(" ");
	}
}
