package Cabs_StepDefinition;

import org.openqa.selenium.WebDriver;
//import org.testng.annotations.Test;

import DriverSetup.DriverCab;
import PageFactory.CabPageFactory;
import io.cucumber.java.en.And;
import io.cucumber.java.en.Given;
import io.cucumber.java.en.Then;
import io.cucumber.java.en.When;

public class CabTesting {
	WebDriver driver;
	CabPageFactory cpf;
	DriverCab driv;
	
    //cpf=new CabPageFactory(driver);
	@Given("User is on Homepage")
	public void user_is_on_homepage() {
     driv.chromeDriver();
	}

	@When("User selects Cab option")
	public void user_selects_cab_option() {
	cpf=new CabPageFactory(driver);
    cpf.clickCab();
	}

	@And("User selects Outstaion One-Way option")
	public void user_selects_outstaion_one_way_option() {
		
	 cpf.clickOneWay();
	}

	@And("User enters the From Source ,To Destination,Departure Date and Pickup-Time")
	public void user_enters_the_from_source_to_destination_departure_date_and_pickup_time() {
	    System.out.println(" ");
	}

	@And("Click on Search button")
	public void click_on_search_button() {
//		cpf=new CabPageFactory(driver);
	 cpf.Search();
	}

	@Then("Landing page of Outstaion One-Way is opened")
	public void landing_page_of_outstaion_one_way_is_opened() {
     System.out.println("landing page");    
	}
}
